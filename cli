#!/usr/bin/env php
<?php

/**
 * Libcast JobQueue CLI v 0.1
 */

require realpath(__DIR__.'/vendor/autoload.php');

use Libcast\JobQueue\Command\ListJobCommand;
use Libcast\JobQueue\Command\EditJobCommand;
use Libcast\JobQueue\Command\DeleteJobCommand;
use Symfony\Component\Console\Application;

$application = new Application('Libcast Job Queue CLI', '0.2');
$application->add(new ListJobCommand);
$application->add(new EditJobCommand);
$application->add(new DeleteJobCommand);
$application->run();